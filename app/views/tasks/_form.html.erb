



	<%= form_for @task, remote: true do |f| %>
	<div class="form-group">
	  	<%= f.text_field  :description, placeholder: "Describe your task!", class: "form-control" %>
	  </div>

	  <div class="form-group">
	  	<%= f.text_field  :deadline, id: "datetimepicker1", placeholder: "When's the deadline?", class: "form-control" %>
	  </div>
	  <div class="form-group">
	  	<%= f.button :submit  %>
	  </div>
	<% end %>

</div>